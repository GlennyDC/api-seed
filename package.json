{
  "name": "api-seed",
  "version": "0.0.0",
  "description": "Seed for an easy and ready to go containerized GraphQL Koa API.",
  "main": "src/index.ts",
  "repository": "https://github.com/GlennyDC/api-seed",
  "author": "Glenny De Cock",
  "license": "MIT",
  "private": false,
  "scripts": {
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prd": "docker-compose -f docker-compose.prd.yml up --build",
    "prebuild": "rimraf dist/* && yarn run generate:gql-types",
    "build": "yarn run build:ts && yarn run copy:gql",
    "start": "NODE_ENV=production node -r source-map-support/register dist/index.js",
    "dev": "nodemon --config nodemon.json",
    "build:ts": "tsc -p tsconfig.json",
    "copy:gql": "copyfiles -u 1 src/schema/**/*.gql dist/",
    "generate:gql-types": "graphql-codegen --config codegen.yml",
    "watch:gql": "graphql-codegen --config codegen.yml --watch 'src/schema/**/*.gql'",
    "test": "echo \"Error: no tests yet\" && exit 1",
    "lint": "eslint . --cache --ext .ts,.json",
    "lint:fix": "eslint . --cache --ext .ts,.json --fix"
  },
  "dependencies": {
    "@graphql-toolkit/file-loading": "^0.10.6",
    "@hapi/joi": "^17.1.1",
    "apollo-server-koa": "^2.14.4",
    "cls-hooked": "^4.2.2",
    "graphql": "^14",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-helmet": "^5.2.0",
    "nanoid": "^3.1.9",
    "node-fetch": "^2.6.0",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.4",
    "@graphql-codegen/typescript": "1.15.4",
    "@graphql-codegen/typescript-resolvers": "1.15.4",
    "@types/cls-hooked": "^4.3.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-helmet": "^5.2.0",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "copyfiles": "^2.3.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^28.5.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.2"
  }
}
